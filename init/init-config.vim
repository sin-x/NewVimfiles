"-------------------------------------------------
" 备份设置
"-------------------------------------------------

" " 允许备份
" set backup
" 
" " 保存时备份
" set writebackup
" 
" " 备份地址，统一管理
" set backupdir=~/.vim/tmp
" 
" " 备份文件扩展名
" set backupext=.bak
" 
" " 禁用交换文件
" set noswapfile

" 禁用备份
set nobackup

" 禁用undo文件
set noundofile
